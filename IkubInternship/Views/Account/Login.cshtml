@model IkubInternship.ViewModels.LoginViewModel
@{
  ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
  <br />
  <div class="form-row mx-auto" style="width:400px">
    <br />
    <h2 class="font-weight-bolder">Login</h2>
    <br />
    <hr style="color:black" />
    <div class="form-group col-md-12">
      @Html.LabelFor(temp => temp.Username)
      @Html.TextBoxFor(temp => temp.Username, new { placeholder = "Username", @class = "form-control" })
      @Html.ValidationMessageFor(temp => temp.Username, null, new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-12">
      @Html.LabelFor(temp => temp.Password)
      @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "form-control" })
      @Html.ValidationMessageFor(temp => temp.Password, null, new { @class = "text-danger" })
    </div>

    <div class="form-group col-md-12">
      @Html.ValidationSummary(null, new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-12">
      <button type="submit" class="btn btn-primary">Login</button>
      <a href="/Home/Index" class="btn btn-light">Cancel</a>
    </div>

  </div>
}


