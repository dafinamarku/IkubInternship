@model IkubInternship.ViewModels.ResetPasswordViewModel
@{
  ViewBag.Title = "ChangePassword";
  Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{
  <br />
  <div class="form-row mx-auto" style="width:400px">
    @Html.Hidden("id", new { @id = ViewBag.UserId })
    <br />
    <h2 class="font-weight-bolder">Change password</h2>
    <br /> <br />
    <hr style="color:black" />
    <div class="form-group col-md-12">
      @Html.LabelFor(temp => temp.NewPassword)
      @Html.PasswordFor(temp => temp.NewPassword, new { placeholder = "New Password", @class = "form-control" })
      @Html.ValidationMessageFor(temp => temp.NewPassword, null, new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-12">
      @Html.LabelFor(temp => temp.ConfirmNewPassword)
      @Html.PasswordFor(temp => temp.ConfirmNewPassword, new { placeholder = "Confirm New Password", @class = "form-control" })
      @Html.ValidationMessageFor(temp => temp.ConfirmNewPassword, null, new { @class = "text-danger" })
    </div>

    <div class="form-group col-md-12">
      @Html.ValidationSummary(null, new { @class = "text-danger" })
    </div>
    <div class="form-group col-md-12">
      <button type="submit" class="btn btn-dark"><i class="fas fa-key"></i> Change Password</button> &nbsp;
      <a href="/Account/Profile" class="btn btn-light">Cancel</a>
    </div>

  </div>
}

