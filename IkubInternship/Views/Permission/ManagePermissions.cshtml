@model IEnumerable<IkubInternship.DomainModels.Permission>
@{
  ViewBag.Title = "ManagePermissions";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
  <br />
  @Html.Partial("_Notifications")
  <br />
  <h2 class="font-weight-bolder">Manage Permissions</h2>
  <div>
    <a href="/Home/Index" class="btn btn-lg btn-dark float-right"><i class="fas fa-home"></i></a><br />
  </div>
  <br /><br /><br />
  @if (Model != null)
  {
    if (Model.Count() == 0)
    {
      <p class="font-weight-bolder">0 Asked Permissions </p>
    }
    else
    {
      <table class="table table-hover">
        <tr>
          <th>Asked From</th>
          <th>@Html.DisplayNameFor(x => x.PermissionDate)</th>
          <th></th>
          <th></th>
        </tr>
        @foreach (var permission in Model)
        {
        <tr>
          <td>@Html.DisplayFor(x => permission.Employee.Name) @Html.DisplayFor(x => permission.Employee.LastName)</td>
          <td>@permission.PermissionDate.ToString("MM/dd/yyyy")</td>
          @if (permission.Status == "Asked")
          {
            <td>
              <button type="button" data-toggle="modal" data-target="#approveModal" onclick="AddFormAction('approvePermissionForm','/Permission/ApprovePermission/@permission.PermissionId')" class="btn btn-success font-weight-bold">Approve</button>&nbsp;
              @Html.ActionLink("Refuse", "RefusePermission", "Permission", new { @id = permission.PermissionId }, new { @class = "btn btn-danger font-weight-bold" })
            </td>
          }
          else
          {
            if (permission.Status == "Refused")
            {
              <td class="text-danger font-weight-bold">@Html.DisplayFor(x => permission.Status)</td>
            }
            else if (permission.Status == "Approved")
            {
              <td class="text-success font-weight-bold">@Html.DisplayFor(x => permission.Status)</td>
            }
            else
            {
              <td class="font-weight-bold text-secondary">@Html.DisplayFor(x => permission.Status)</td>
            }
          }
          <td>
            @Html.ActionLink("Details", "Details", "Permission", new { @id = permission.PermissionId, @manage = 1 }, null) &nbsp;&nbsp;
            @if (permission.Status == "Canceled")
            {
              <button type="button" class="btn btn-outline-danger font-weight-bold" data-toggle="modal" data-target="#deleteModal" onclick="AddFormAction('deletePermissionForm','/Permission/Delete/@permission.PermissionId')">Delete</button>
            }
          </td>
        </tr>
        }
      </table>
    }
  }
</div>

<!--Approve Modal-->
<div class="modal fade" id="approveModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Are you sure you want to approve the permission?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <form action="" id="approvePermissionForm" method="post">
          <button type="submit" class="btn btn-success">Approve</button>
        </form>
      </div>
    </div>
  </div>
</div>

<!--Delete Modal-->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Are you sure you want to delete this permission?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <form action="" id="deletePermissionForm" method="post">
          <button type="submit" class="btn btn-dark">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  function AddFormAction(formId, actionUrl) {
    document.getElementById(formId).action = actionUrl;
  }
</script>


