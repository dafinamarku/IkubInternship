@model IEnumerable<IkubInternship.DomainModels.ApplicationUser>
@{
  ViewBag.Title = "AllEmployees";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
  <br />
  @Html.Partial("_Notifications")
  <br />
  <div class="form-inline">
    <div class="col-md-6">
      @Html.ActionLink("Create New Employee", "Create", "Employees", new { @class = "btn btn-lg btn-info" })
    </div>
    <div class="col-md-6">
      <a href="/HR/Employees/DeletedEmployees" class="btn btn-lg btn-dark float-right"><i class="far fa-trash-alt"></i> Deleted Employees</a>
    </div>
  </div>
  <br />
  <br />
  @if (Model == null||Model.Count() == 0)
  {
    <h2 class="font-weight-bolder">There is no Employee</h2>
  }
  else
  {
    <h2 class="font-weight-bolder">List of Employees</h2>
    <br />
    <div class="container">
      <table class="table table-hover table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>@Html.DisplayNameFor(x => x.Name)</th>
            <th>@Html.DisplayNameFor(x => x.LastName)</th>
            <th>@Html.DisplayNameFor(x => x.Email)</th>
            <th>Departament</th>
            <th>@Html.DisplayNameFor(x => x.RemainingPermissions)</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          @foreach (var item in Model)
          {
            <tr>
              <td>@item.Name</td>
              <td>@item.LastName</td>
              <td>@item.Email</td>
              <td>@item.EmployeeDep.Name</td>
              <td>@item.RemainingPermissions</td>
              <td>
                @Html.ActionLink("Details", "Details", new { @id = item.Id }) |
                @Html.ActionLink("Edit", "Edit", new { @id = item.Id }) |
                <button type="button" onclick="AddFormAction('/HR/Employees/Delete/@item.Id')" data-toggle="modal" data-target="#deleteModal" class="btn-link bg-transparent" style="border:none;">Delete</button>
              </td>
            </tr>
          }
        </tbody>

      </table>
    </div>
  }

</div>

<!--Delete Modal-->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Are you sure you want to delete the employee?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <form action="" id="deleteEmployeeForm" method="post">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script>
  function AddFormAction(actionUrl) {
    document.getElementById('deleteEmployeeForm').action = actionUrl;
  }
</script>