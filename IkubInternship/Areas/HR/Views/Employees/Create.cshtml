@model IkubInternship.ViewModels.CreateEmployeeViewModel
@{
  ViewBag.Title = "Create";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

    
<div class="container">
  <br />
  <h2 class="font-weight-bolder">Create New Employee</h2>
  <br />
  @using (Html.BeginForm("Create", "Employees", FormMethod.Post))
  {
    <div class="card bg-light text-black-50">
      <div class="card-body">
        <div class="form-row">
          <div class="form-group col-md-4">
            @Html.LabelFor(temp => temp.Name)
            @Html.TextBoxFor(temp => temp.Name, new { placeholder = "Name", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Name, null, new { @class = "text-danger" })
          </div>
          <div class="form-group col-md-4">
            @Html.LabelFor(temp => temp.LastName)
            @Html.TextBoxFor(temp => temp.LastName, new { placeholder = "Last Name", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.LastName, null, new { @class = "text-danger" })
          </div>
          <div class="form-group col-md-4">
            @Html.LabelFor(temp => temp.Email)
            @Html.TextBoxFor(temp => temp.Email, new { placeholder = "Email", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Email, null, new { @class = "text-danger" })
          </div>
        </div>
        <div class="form-row">
          <div class="form-group col-md-4">
            @Html.LabelFor(temp => temp.Username)
            @Html.TextBoxFor(temp => temp.Username, new { placeholder = "Username", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Username, null, new { @class = "text-danger" })
          </div>
          <div class="form-group col-md-4">
            @Html.LabelFor(temp => temp.Password)
            @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.Password, null, new { @class = "text-danger" })
          </div>
          <div class="form-group col-md-4">
            @Html.LabelFor(temp => temp.ConfirmPassword)
            @Html.PasswordFor(temp => temp.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.ConfirmPassword, null, new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-4">
            <label class="control-label">Departament</label>
            @Html.DropDownListFor(temp => temp.DepartamentId, ViewBag.DepartamentId as IEnumerable<SelectListItem>, null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(temp => temp.DepartamentId, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group text-danger">
          @Html.ValidationSummary()
        </div>


        <button type="submit" class="btn btn-lg btn-dark">Create</button> &nbsp; &nbsp;
        @Html.ActionLink("Cancel", "AllEmployees", "Employees", new { @class = "btn btn-lg border-dark" })
      </div>
    </div>


  }

</div>
    